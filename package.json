{
  "name": "mastra-rag-chatbot",
  "version": "1.0.0",
  "description": "智能文檔問答助手，基於 Mastra 框架和 RAG（檢索增強生成）技術",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "mastra dev",
    "build": "mastra build",
    "start": "mastra start",
    "server": "tsx server.ts",
    "server:dev": "tsx watch server.ts",
    "build:worker": "tsc && esbuild src/worker-minimal.ts --bundle --format=esm --outfile=dist/worker.js --platform=browser --target=es2022 --minify --define:process.env.NODE_ENV='\"production\"' --tree-shaking=true",
    "build:worker:full": "tsc && esbuild src/worker.ts --bundle --format=esm --outfile=dist/worker.js --platform=neutral --target=es2022 --minify --external:pg --external:mammoth --external:pdf-parse --external:textract --external:crypto --external:events --external:stream --external:stream/web --external:fs --external:fs/promises --external:path --external:os --external:util --external:module --external:node-html-better-parser --external:@opentelemetry/*",
    "deploy:worker": "wrangler deploy --env production --no-bundle",
    "deploy:worker:staging": "wrangler deploy --env staging --no-bundle",
    "dev:worker": "wrangler dev",
    "setup:supabase": "node scripts/setup-supabase.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.64",
    "@mastra/core": "^0.24.0",
    "@mastra/evals": "^0.14.3",
    "@mastra/libsql": "^0.16.2",
    "@mastra/loggers": "^0.10.19",
    "@mastra/memory": "^0.15.11",
    "@mastra/pg": "^0.17.8",
    "@mastra/rag": "^1.3.4",
    "ai": "^5.0.90",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "formidable": "^3.5.1",
    "mammoth": "^1.11.0",
    "openai": "^6.8.1",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "textract": "^2.5.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/formidable": "^3.4.6",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.11.10",
    "@types/textract": "^2.4.5",
    "esbuild": "^0.19.0",
    "mastra": "^0.18.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.47.0"
  }
}